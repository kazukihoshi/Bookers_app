<p id ="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan ="3"></th>
    </tr>
  </thead>
  
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
      <td>
        <%= link_to "show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "destroy", book_path(book.id),method: :delete,"data-confirm"=>"Are you sure?" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
<form class="new-book">
  <div class="field">
    <label for ="book-title">Title</label>
     <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label for ="book-body">Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
     <%= f.submit 'Create Book' %>
  </div>
 
  
</form>

<% end %>

